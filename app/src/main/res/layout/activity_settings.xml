<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF0F5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- General Settings Category -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/general_setting"
            android:textSize="20sp"
            android:textColor="#FF69B4"
            android:layout_marginBottom="16dp" />

        <!-- Language Selection -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/language_setting"
            android:textSize="18sp"
            android:layout_marginBottom="8dp" />

        <Spinner
            android:id="@+id/spinnerLanguage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:background="@drawable/spinner_border"
            android:minHeight="48dp" />

        <!-- Account Management Category -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#FF69B4"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/account_mgmnt"
            android:textSize="20sp"
            android:textColor="#FF69B4"
            android:layout_marginBottom="16dp" />

        <Button
            android:id="@+id/buttonChangeUsername"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/change_id"
            android:backgroundTint="#FF69B4"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="16dp" />

        <Button
            android:id="@+id/buttonChangeEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/change_email"
            android:backgroundTint="#FF69B4"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="16dp" />

        <Button
            android:id="@+id/buttonChangePassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/change_pswd"
            android:backgroundTint="#FF69B4"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="16dp" />

        <!-- Reminder Settings Category -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#FF69B4"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/notification_setting"
            android:textSize="20sp"
            android:textColor="#FF69B4"
            android:layout_marginBottom="16dp" />

        <Switch
            android:id="@+id/switchReminder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:minHeight="48dp"
            android:text="@string/notification_switch"
            android:textSize="18sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/reminder_1"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/textViewReminderTime1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/remindertime_1"
                android:textSize="18sp"
                android:layout_marginRight="16dp" />

            <Button
                android:id="@+id/buttonSetReminderTime1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/remindertime_1_setting"
                android:backgroundTint="#FF69B4"
                android:textColor="#FFFFFF" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/reminder_2"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/textViewReminderTime2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/remindertime_2"
                android:textSize="18sp"
                android:layout_marginRight="16dp" />

            <Button
                android:id="@+id/buttonSetReminderTime2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/remindertime_2_setting"
                android:backgroundTint="#FF69B4"
                android:textColor="#FFFFFF" />
        </LinearLayout>

        <Switch
            android:id="@+id/switchWaterReminder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:minHeight="48dp"
            android:text="@string/water_reminder"
            android:textSize="18sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/water_reminder_time"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/textViewWaterReminderTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/water_reminder_time_text"
                android:textSize="18sp"
                android:layout_marginRight="16dp" />

            <Button
                android:id="@+id/buttonSetWaterReminderTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/set_water_alarm"
                android:backgroundTint="#FF69B4"
                android:textColor="#FFFFFF" />
        </LinearLayout>

        <!-- Logout and Delete Account Category -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#FF69B4"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/account_control"
            android:textSize="20sp"
            android:textColor="#FF69B4"
            android:layout_marginBottom="16dp" />

        <Button
            android:id="@+id/buttonLogout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/account_logout"
            android:backgroundTint="#FF69B4"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="16dp" />

        <Button
            android:id="@+id/buttonDeleteAccount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/account_delete"
            android:backgroundTint="#FF69B4"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="16dp" />

    </LinearLayout>
</ScrollView>
